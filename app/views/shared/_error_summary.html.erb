<% if defined?(resource) && resource.errors.any? %>
  <div class="mx-auto max-w-3xl mb-3 rounded-xl px-4 py-3 text-sm border border-red-200 bg-red-50 text-red-700">
    <div class="font-semibold mb-1">入力内容を確認してください。</div>
    <ul class="list-disc pl-5 space-y-1">
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
