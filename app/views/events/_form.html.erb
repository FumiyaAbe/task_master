<%= simple_form_for(@event) do |f| %>
  <!-- ✨ エラーサマリー -->
  <%= f.error_notification message: "入力内容を確認してください。" %>
  
  <div class="card space-y-5">
    <!-- タイトル -->
    <%= f.input :title,
                label: "タイトル",
                input_html: { placeholder: "例）チーム定例" } %>

    <!-- 場所 -->
    <%= f.input :location,
                label: "場所",
                input_html: { placeholder: "例）オンライン / 会議室A" } %>

    <!-- 日時（2カラム） -->
    <div class="grid gap-4 md:grid-cols-2">
      <%= f.input :starts_at,
                  as: :string,
                  label: "開始日時",
                  input_html: { type: "datetime-local" } %>

      <%= f.input :ends_at,
                  as: :string,
                  label: "終了日時",
                  input_html: { type: "datetime-local" } %>
    </div>

    <!-- 終日フラグ（カラムがある時だけ表示） -->
    <% if f.object.respond_to?(:all_day) %>
      <div class="flex items-center gap-2">
        <%= f.input :all_day,
                    as: :boolean,
                    label: "終日のイベント",
                    wrapper_html: { class: "m-0" } %>
      </div>
    <% end %>

    <!-- メモ -->
    <%= f.input :notes,
                as: :text,
                label: "メモ",
                input_html: { placeholder: "補足やアジェンダなどを記入" } %>

    <!-- アクション -->
    <div class="flex items-center justify-end gap-2">
      <%= link_to "一覧に戻る", events_path, class: "btn-ghost" %>
      <%= f.button :submit, (@event.persisted? ? "更新する" : "作成する"), class: "btn-main" %>
    </div>
  </div>
<% end %>
