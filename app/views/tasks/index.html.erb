<div class="mx-auto max-w-4xl p-4">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-bold">Tasks</h1>
    <% if user_signed_in? %>
      <%= link_to "新規タスク", new_task_path, class: "btn-accent" %>
    <% end %>
  </div>

  <% if @tasks.any? %>
    <ul class="space-y-2">
      <% @tasks.each do |task| %>
        <li class="rounded-xl border p-3">
          <div class="flex items-center justify-between">
            <%= link_to task.title, task_path(task), class: "font-semibold" %>
            <div class="text-sm opacity-70">
              <span class="mr-2">状態: <%= task.status %></span>
              <span>優先度: <%= task.priority %></span>
            </div>
          </div>
          <% if task.due_at.present? %>
            <div class="text-sm opacity-70 mt-1">期限: <%= l task.due_at, format: :long %></div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="opacity-70">まだタスクがありません。</p>
  <% end %>
</div>
